@model PersonneIndexVMAJAX

@if (TempData["Message"] != null)
{
    <p class="bg-success text-white">@TempData["Message"]</p>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form id="formAchat" asp-action="Index">
    <div class="row">
        <div class="form-group">
            <span asp-validation-for="ProprietaireId" class="text-danger p-3"></span>
            <div class="form-group form-inline">
                <label asp-for="ProprietaireId" class="control-label p-3"></label>
                <select asp-for="ProprietaireId" asp-items="@Model.Proprietaires" class="form-control">
                    <option value="">Sélectionner un propriétaire</option>
                </select>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="form-group">
            <label asp-for="ArgentDisponible" class="control-label"></label>
            <p class="font-weight-bold">
                @Html.DisplayFor(m => m.ArgentDisponible)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="VoitureChoisieId" class="control-label"></label>
                <select asp-for="VoitureChoisieId" asp-items="@Model.VoituresDisponibles" class="form-control">
                    <option value="" disabled="disabled">Sélectionner un véhicule</option>
                </select>
                <span asp-validation-for="VoitureChoisieId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label asp-for="DatePrisePossession" class="control-label"></label>
            <input asp-for="DatePrisePossession" class="form-control" />
            <span asp-validation-for="DatePrisePossession" class="text-danger"></span>
        </div>
    </div>


    <div class="row">
        <div class="form-group m-auto">
            <button type="submit" class="btn btn-primary btn-lg">Acheter</button>
        </div>
    </div>
</form>




