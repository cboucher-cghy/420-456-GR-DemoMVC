<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DemoMVC - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DemoMVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropDownMarques" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Marques
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropDownMarques">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Marques" asp-action="Index">Index</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Marques" asp-action="IndexMarques">Index avec objet</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropDownModeles" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Modèles
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropDownModeles">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Modeles" asp-action="Index">Index</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Modeles" asp-action="IndexVM">IndexVM</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Modeles" asp-action="IndexGroupeVM">IndexGroupeVM</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropDownVoitures" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Voitures
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropDownVoitures">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Voitures" asp-action="Index">Index</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Voitures" asp-action="IndexBD">Index avec accès BD</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropDownVoitures" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Personnes
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropDownVoitures">
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Personnes" asp-action="Index">Index</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Personnes" asp-action="IndexAJAX">Index AJAX</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info" role="alert">@TempData["Message"]</div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DemoMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
